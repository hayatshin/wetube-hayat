doctype html
html
    head 
        meta(charset="urf8")
        link(ref="shortcut icon" href="#")
        title #{pageTitle} | Wetube
        style 
            include ../css/guitarVideo.css
    body 
        div#Record
            form#RecordForm(method="POST")
                input#DateInput(type="date" name="date")
                label(for="title") Title:
                input#TitleInput(type="text" name="title")
            div#Btn
                button#VideoBtn Start Video Recording 
                button#AudioBtn Start Audio Recording
            div#RecordVideoBox
                div#VideoBox
                    video#recordVideo
                div#AudioBox
                    audio#recordAudio
        div#List
            if videos.length > 0 
                each video in videos
                    div#videoList
                        div#VideoTitle
                            a#LinkVideo(href=`${video.id}/show`)
                                span üëâ Date: #{video.date} / Title: #{video.title}
                                a#LinkVideoDelete(href=`${video.id}/delete`)
                                    span ‚ùå
                        if video.show
                            div#videoShowBox
                                if video.type == "video"
                                    video#VideoShow(src=`${video.file}` controls)
                                else if video.type == "audio"
                                    audio#Audioshow(src=`${video.file}` controls)

    script(src="../js/recorder.js")